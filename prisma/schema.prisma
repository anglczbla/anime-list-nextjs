generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name    String
  email       String       @unique 
  photo       String
  
 
  collections Collection[]
  comments    Comment[]
}

model Collection {
  id             Int     @id @default(autoincrement())
  anime_mal_id   String
  anime_image    String?
  anime_title    String?

  // foreign Key
  user_email     String
  user           User    @relation(fields: [user_email], references: [email], onDelete: Cascade)

  @@unique([user_email, anime_mal_id])
}

model Comment {
  id             Int      @id @default(autoincrement())
  anime_mal_id   String
  comment        String
  anime_title    String?
  createdAt      DateTime @default(now())

  // foreign Key
  user_email     String
  user           User     @relation(fields: [user_email], references: [email], onDelete: Cascade)

}